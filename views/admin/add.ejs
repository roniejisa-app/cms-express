<form action="/admin/<%= module %>" method="POST" data-module="<% module %>">
    <div class="d-flex justify-content-between my-5 header-view">
        <h2>Thêm <%= name_show %></h2>
        <div>
            <button class="btn btn-success">Lưu</button>
            <a class="btn btn-danger" href="/admin/<%= module %>">Hủy</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-9">
            <% leftFields.forEach(field => { %> <%-
            include(`./types/add/${field.type}`, { field,req }) %> <% }) %>
        </div>
        <div class="col-12 col-md-3">
            <% rightFields.forEach(field => { %> <%-
            include(`./types/add/${field.type}`, { field,req }) %> <% }) %>
        </div>
    </div>
</form>
