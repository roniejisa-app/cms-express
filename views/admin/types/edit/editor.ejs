<div class="form-group mb-3">
	<label class="d-block mb-1"><%= field.label %></label>
	<textarea hidden class="form-control" type="text" name="<%= field.name %>" placeholder="<%= field.placeholder ?? field.label  %>"><%= req.old[field.name] ?? data[field.name] %></textarea>
    <cms-editor data-name="<%= field.name %>"><%- req.old[field.name] ?? data[field.name] %></cms-editor>
    <% if (req.error && req.error[field.name]) { %>
	<p class="text-danger mt-2"><%= req.error[field.name] %></p>
	<% } %>
</div>