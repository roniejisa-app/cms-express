<div class="form-group mb-3">
    <label class="d-block mb-1"><%= field.label %></label>
    <div class="image-form" data-type="multiple">
        <textarea
            class="form-control"
            type="text"
            name="<%= field.name %>"
            placeholder="<%= field.placeholder ?? field.label  %>"
            hidden
        ><%= req.old[field.name] ?? '' %></textarea>
        <div class="cms-gallery">
            <% if(req.old[field.name]) {%>
                <% JSON.parse(req.old[field.name]).forEach((item) => { 
                    const img = JSON.parse(item)    
                %>
                    <div class="cms-gallery-item" data-id="<%= img.uniqueId %>">
                        <img src="/<%= img.path_absolute %>"/>
                        <div class="btn-remove-gallery" type="button">&times;</div>
                    </div>
                <% }) %>
            <% } %>
        </div>
        <div class="image-form-action">
            <div class="btn btn-choose-image btn-success" type="button">
                Chọn ảnh
            </div>
            <div class="btn btn-remove-image btn-danger" type="button">
                Xóa tất cả
            </div>
        </div>
    </div>
    <% if (req.error && req.error[field.name]) { %>
    <p class="text-danger mt-2"><%= req.error[field.name] %></p>
    <% } %>
</div>