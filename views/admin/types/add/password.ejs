<div class="form-group mb-3">
  <label class="d-block mb-1"><%= field.label %></label>
  <input class="form-control" name="<%= field.name %>" type="password" value="<%= req.old[field.name] ?? '' %>" placeholder="<%= field.placeholder ?? field.label  %>">
  <% if (req.error && req.error[field.name]) { %>
  <p class="text-danger mt-2"><%= req.error[field.name] %></p>
  <% } %>
</div>