<div class="form-group mb-3">
  <label class="d-block mb-1"><%= field.label %></label>
  <select name="<%= field.name %>" class="form-control">
    <% field.options.forEach(option => { %>
    <option value="<%= option.value %>" <% if(+req.old[field.name] === option.value) { %>selected<% } %>>
      <%= option.name %>
    </option>
    <% }) %>
  </select>
  <% if (req.error && req.error[field.name]) { %>
    <p class="text-danger mt-2"><%= req.error[field.name] %></p>
  <% } %>
</div>