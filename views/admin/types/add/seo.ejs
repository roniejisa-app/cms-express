<div class="mb-3">
    <label class="d-block mb-1 font-bold"><%= field.label %></label>
    <div class="form-seo">
        <div class="seo-facebook">
            <div class="image-form" data-type="last">
                <textarea
                    class="form-control"
                    type="text"
                    name="seo_image"
                    placeholder="<%= field.placeholder ?? field.label  %>"
                    hidden
                ><%= req.old[field.name] ?? '' %></textarea>
                <span>
                    <img
                        src="<%= req.old[field.name] ? '/'+JSON.parse(req.old['seo_image']).path_absolute : '/images/admin/no-image.svg' %>"
                        alt="Chưa chọn ảnh"
                    />
                </span>
                <div class="image-form-action">
                    <div class=" btn-choose-image" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M160 80H512c8.8 0 16 7.2 16 16V320c0 8.8-7.2 16-16 16H490.8L388.1 178.9c-4.4-6.8-12-10.9-20.1-10.9s-15.7 4.1-20.1 10.9l-52.2 79.8-12.4-16.9c-4.5-6.2-11.7-9.8-19.4-9.8s-14.8 3.6-19.4 9.8L175.6 336H160c-8.8 0-16-7.2-16-16V96c0-8.8 7.2-16 16-16zM96 96V320c0 35.3 28.7 64 64 64H512c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H160c-35.3 0-64 28.7-64 64zM48 120c0-13.3-10.7-24-24-24S0 106.7 0 120V344c0 75.1 60.9 136 136 136H456c13.3 0 24-10.7 24-24s-10.7-24-24-24H136c-48.6 0-88-39.4-88-88V120zm208 24a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z"/></svg>
                    </div>
                    <div class="btn-remove-image" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
                    </div>
                </div>
            </div>
            <div class="form-seo-content">
                <textarea type="text" class="form-control" name="seo_title" placeholder="<%= i18n.__("seo_title") %>"><%= req.old['seo_title'] ?? '' %></textarea>    
            </div>
        </div>
        <div class="mt-3">
            <label class="mb-3 d-block"><%= i18n.__("seo_description") %></label>
            <textarea name="seo_description" class="form-control" placeholder="<%= i18n.__("seo_description") %>"><%= req.old['seo_description'] ?? '' %></textarea>
        </div>
        <div class="mt-3">
            <label class="mb-3 d-block"><%= i18n.__("seo_keywords") %></label>
            <input type="text" name="seo_keywords" class="form-control" value="<%= req.old['seo_keywords'] ?? '' %>"  placeholder="<%= i18n.__("seo_keywords") %>">
        </div>
    </div>
</div>