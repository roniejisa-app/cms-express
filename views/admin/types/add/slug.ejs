<div class="form-group mb-3">
    <label class="d-block mb-1"><%= field.label %></label>
    <input
        type-input="slug"
        class="form-control"
        type="text"
        name="<%= field.name %>"
        value="<%= req.old[field.name] ?? '' %>"
        placeholder="<%= field.placeholder ?? field.label  %>"
    />
    <% if (req.error && req.error[field.name]) { %>
    <p class="text-danger"><%= req.error[field.name] %></p>
    <% } %>
</div>
