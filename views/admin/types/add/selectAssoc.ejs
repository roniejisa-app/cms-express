<div class="form-group mb-3">
  <label class="d-block mb-1"><%= field.label %></label>
  <select name="<%= field.name %>" class="form-control">
    <option value="">-- Ch·ªçn <%= field.label %> --</option>
    <% field.data.forEach(option => { %>
    <option value="<%= option[field.keyValue] %>" <% if(typeof req.old === 'object' && req.old[field.name] === option[field.keyValue]) { %> selected <% } %>>
      <%= option.name %>
    </option>
    <% }) %>
  </select>
  <% if (req.error && req.error[field.name]) { %>
    <p class="text-danger mt-2"><%= req.error[field.name] %></p>
  <% } %>
</div>