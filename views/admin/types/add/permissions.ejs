<% if(req.permission.some(permission => (permission.includes(`${field.name}.add`) || permission.includes(`${field.name}.update`)))){ %>
<div class="form-group mb-3">
  <label class="d-block mb-1"><%= field.label %></label>
  <table class="table permission border">
    <thead>
      <tr>
        <th>Module</th>
        <th>Quy·ªÅn</th>
        </th>
      </tr>
    </thead>
    <tbody>
      <% field.data.forEach(module => { %>
      <tr>
        <td><%= module[field.keyLabel] %></td>
        <td>
          <div class="grid gap-2">
            <% module[field.asModelAssoc].forEach(permission => { %>
            <label role="button">
              <input type="checkbox" name="<%= field.name %>" value="<%= module[field.keyValue] %>|<%= permission[field.keyValueOfAssoc] %>">
              <%= permission[field.keyLabelOfAssoc] %>
            </label>
            <% }) %>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<% } %>