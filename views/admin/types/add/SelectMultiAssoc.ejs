<div class="form-group mb-3">
  <label class="d-block mb-1"><%= field.label %></label>
  <div class="grid">
    <% field.data.forEach(option => { %>
    <label role="button">
      <input name="<%= field.name %>" value="<%= option[field.valueKey] %>" type="checkbox">
      <%= option[field.labelKey] %>
    </label>
    <% }) %>
    </input>
  </div>
  <% if (req.error && req.error[field.name]) { %>
    <p class="text-danger mt-2"><%= req.error[field.name] %></p>
  <% } %>
</div>
